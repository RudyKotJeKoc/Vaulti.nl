// app.js
const state = {
  sanity: 70,
  trust: 50,
  inventory: []
};

const el = {
  sanity: document.getElementById('sanity'),
  trust: document.getElementById('trust'),
  items: document.getElementById('items'),
  log: document.getElementById('log'),
  hotspots: document.querySelectorAll('.hotspot')
};

function render() {
  el.sanity.textContent = state.sanity;
  el.trust.textContent = state.trust;
  el.items.innerHTML = state.inventory.map((it, i)=>`<li>${it}</li>`).join('') || '<li>â€” pusto â€”</li>';
}

function log(text){
  const p = document.createElement('div');
  p.textContent = text;
  el.log.prepend(p);
}

// actions
function confront() {
  // ryzykowna opcja: obniÅ¼a sanity, moÅ¼e obniÅ¼yÄ‡ trust lub zwiÄ™kszyÄ‡
  state.sanity -= 10;
  // losowa reakcja Barbary
  if (Math.random() > 0.6) { state.trust -= 15; log('Barbara zirytowana â€” traci do Ciebie zaufanie.'); }
  else { state.trust += 10; log('Barbara zaskoczona â€” jej zaufanie wzrasta.'); }
  render();
}

function distract() {
  state.sanity += 5;
  state.trust += 5;
  log('Udajesz spokÃ³j â€” na chwilÄ™ cisza. Sanity +5, Trust +5.');
  render();
}

function investigate() {
  // szansa na znalezienie dowodu
  if (Math.random() > 0.4) {
    state.inventory.push('Zaginiony list');
    log('ZnalazÅ‚eÅ› "Zaginiony list" â€” dodano do inwentarza.');
    state.trust -= 8; // Barbara bÄ™dzie mniej ufaÄ‡, jeÅ›li odkryjesz coÅ› przeciwko niej
  } else {
    log('Nic tu nie ma. KtoÅ› mÃ³gÅ‚ juÅ¼ posprzÄ…taÄ‡.');
    state.sanity -= 5;
  }
  render();
}

document.querySelectorAll('.hotspot').forEach(btn=>{
  btn.addEventListener('click',()=>{
    const action = btn.getAttribute('data-action');
    if(action === 'confront') confront();
    if(action === 'distract') distract();
    if(action === 'investigate') investigate();
  });
});

render();
log('Witaj w prototypie. Wybierz akcjÄ™, aby zobaczyÄ‡ wpÅ‚yw na sanity i zaufanie.');
