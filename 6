// po utworzeniu renderer:
t.renderer.setPixelRatio(Math.min(window.devicePixelRatio || 1, 2));
const resize = () => {
  const w = app.elements.threeContainer.clientWidth;
  const h = app.elements.threeContainer.clientHeight || w; // zachowaj kwadrat, jeÅ›li nie ma wysokoÅ›ci
  t.camera.aspect = w / h;
  t.camera.updateProjectionMatrix();
