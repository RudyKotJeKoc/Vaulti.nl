    document.addEventListener('DOMContentLoaded', () => {
      const configForm = document.getElementById('config-form');
      const variantSelect = document.getElementById('variant-select');
      const previewImage = document.getElementById('preview-image');
      const colorSwatches = document.querySelectorAll('.color-swatches button');
      const engraveInput = document.getElementById('grawer-input');
      const engravePreview = document.getElementById('engrave-preview');
      const colorSwatchesContainer = document.querySelector('.color-swatches');

      const config = {
          variant: 'color',
          color: 'pink',
          engrave: ''
      };

      function updateConfiguratorPreview() {
        if (config.variant === 'wood') {
          previewImage.src = '/image/vaulti_2.png';
          previewImage.alt = 'PodglÄ…d drewnianej skarbonki Vaulti Wood';
          colorSwatchesContainer.style.opacity = '0.5';
          colorSwatchesContainer.style.pointerEvents = 'none';
        } else {
          previewImage.alt = 'PodglÄ…d kolorowej skarbonki Vaulti Color';
          colorSwatchesContainer.style.opacity = '1';
          colorSwatchesContainer.style.pointerEvents = 'auto';
          
          const activeColorSwatch = document.querySelector(.color-swatches button[data-color="${config.color}"]);
          colorSwatches.forEach(s => s.classList.remove('active'));
          if(activeColorSwatch) activeColorSwatch.classList.add('active');

          switch(config.color) {
            case 'pink': previewImage.src = '/image/vaulti_1.png'; break;
            case 'lightblue': previewImage.src = '/image/vaulti_3.png'; break;
            case 'lightgreen': previewImage.src = '/image/vaulti_4.png'; break;
            case 'black': previewImage.src = '/image/vaulti_0.png'; break;
            default: previewImage.src = '/image/vaulti_1.png';
          }
        }
        engravePreview.textContent = config.engrave;
        variantSelect.value = config.variant;
        engraveInput.value = config.engrave;
      }
      
      function saveConfig() {
          localStorage.setItem('vaultiConfig', JSON.stringify(config));
      }

      function loadConfig() {
          const savedConfig = localStorage.getItem('vaultiConfig');
          if (savedConfig) {
              const parsedConfig = JSON.parse(savedConfig);
              Object.assign(config, parsedConfig);
          }
          updateConfiguratorPreview();
      }

      engraveInput.addEventListener('input', () => {
        if (engraveInput.value.length > 20) engraveInput.value = engraveInput.value.slice(0, 20);
        config.engrave = engraveInput.value.trim();
        engravePreview.textContent = config.engrave;
        saveConfig();
      });

      variantSelect.addEventListener('change', (e) => {
        config.variant = e.target.value;
        updateConfiguratorPreview();
        saveConfig();
      });
      
      colorSwatches.forEach(swatch => {
        swatch.addEventListener('click', (e) => {
          e.preventDefault();
          if (config.variant === 'color') {
            config.color = swatch.dataset.color;
            updateConfiguratorPreview();
            saveConfig();
          }
        });
      });

      configForm.addEventListener('submit', (e) => {
          e.preventDefault();
          const params = new URLSearchParams(config);
          window.location.href = /checkout?${params.toString()};
      });
      
      document.getElementById('footer-year').textContent = new Date().getFullYear();

      loadConfig();
    });
  </script>
</body>
</html>

