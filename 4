if (sticky && konf) {
  const io = new IntersectionObserver(entries=>{
    entries.forEach(e=>{
      // gdy konfigurator widaÄ‡, chowamy przycisk
      sticky.style.display = e.isIntersecting ? 'none' : '';
    });
  }, {rootMargin: '-20% 0px -60% 0px'});
  io.observe(konf);
}
