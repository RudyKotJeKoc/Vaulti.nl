    function updatePreview(variant, buttonElement) {
      const img = document.getElementById('preview-image');
      const text = document.getElementById('preview-text');
      const buttons = buttonElement.parentElement.querySelectorAll('.btn');

      // Aktualizacja obrazka i tekstu
      if (variant === 'color') {
        img.src = 'https://placehold.co/500x500/0d1117/e6edf3?text=Vaulti+Color';
        text.innerText = 'Vaulti Color';
      } else if (variant === 'wood') {
        img.src = 'https://placehold.co/500x500/0d1117/e6edf3?text=Vaulti+Wood';
        text.innerText = 'Vaulti Wood';
      }
      
      // Aktualizacja stylu przyciskÃ³w
      buttons.forEach(btn => {
        btn.classList.remove('secondary');
        btn.classList.add('secondary');
      });
      buttonElement.classList.remove('secondary');
    }
  </script>
