  <script defer>
    document.addEventListener('DOMContentLoaded', () => {
      const app = {
        config: { variant: 'color', color: 'pink', engrave: '' },
        elements: {
          menuToggle: document.getElementById('menu-toggle'),
          mobileNav: document.getElementById('mobile-nav'),
          mobileNavLinks: document.querySelectorAll('#mobile-nav a'),
          form: document.getElementById('config-form'),
          variantSelect: document.getElementById('variant-select'),
          previewCanvas: document.getElementById('preview-canvas'),
          colorSwatches: document.querySelectorAll('.color-swatches button'),
          engraveInput: document.getElementById('grawer-input'),
          cookieBanner: document.getElementById('cookie-banner'),
          cookieAcceptBtn: document.getElementById('cookie-accept'),
        },
        init() {
          this.initMenu();
          this.initConfigurator();
          this.initCookieBanner();
          document.getElementById('footer-year').textContent = new Date().getFullYear();
        },
        initMenu() {
          this.elements.menuToggle.addEventListener('click', () => this.toggleMenu());
          this.elements.mobileNavLinks.forEach(link => link.addEventListener('click', () => this.toggleMenu(false)));
        },
        toggleMenu(forceOpen = null) {
          const isExpanded = forceOpen !== null ? !forceOpen : this.elements.menuToggle.getAttribute('aria-expanded') === 'true';
          this.elements.mobileNav.toggleAttribute('hidden', isExpanded);
          this.elements.menuToggle.setAttribute('aria-expanded', !isExpanded);
          this.elements.menuToggle.setAttribute('aria-label', isExpanded ? 'OtwÃ³rz menu' : 'Zamknij menu');
          if (!isExpanded) this.elements.mobileNav.querySelector('a').focus();
        },
        initConfigurator() {
            this.loadConfig();
            this.elements.engraveInput.addEventListener('input', () => this.handleEngraveInput());
            this.elements.variantSelect.addEventListener('change', (e) => this.handleVariantChange(e.target.value));
            this.elements.colorSwatches.forEach(swatch => swatch.addEventListener('click', (e) => this.handleColorChange(e, swatch.dataset.color)));
            this.elements.form.addEventListener('submit', (e) => this.handleFormSubmit(e));
        },
        handleEngraveInput() {
            const sanitizedValue = this.elements.engraveInput.value.replace(/[^0-9A-Za-zÄ„Ä…Ä†Ä‡Ä˜Ä™ÅÅ‚ÅƒÅ„Ã“Ã³ÅšÅ›Å¹ÅºÅ»Å¼ \-_.]/g,'').slice(0, 20);
            this.elements.engraveInput.value = sanitizedValue;
            this.config.engrave = sanitizedValue.trim();
            this.updatePreview();
            this.saveConfig();
        },
        handleVariantChange(variant) {
            this.config.variant = variant;
            this.updatePreview();
            this.saveConfig();
        },
        handleColorChange(e, color) {
            e.preventDefault();
            if (this.config.variant === 'color') {
                this.config.color = color;
                this.updatePreview();
                this.saveConfig();
            }
        },
        handleFormSubmit(e) {
            e.preventDefault();
            if (this.config.variant === 'color' && !this.config.color) {
                alert('ProszÄ™ wybraÄ‡ kolor.');
                this.elements.variantSelect.setAttribute('aria-invalid', 'true');
                return;
            }
            this.elements.variantSelect.setAttribute('aria-invalid', 'false');
            const params = new URLSearchParams(this.config);
            window.location.href = /checkout?${params.toString()};
        },
        updatePreview() {
            const canvas = this.elements.previewCanvas;
            const ctx = canvas.getContext('2d');
            const img = new Image();
            
            let imgSrc = '/image/vaulti_1.png'; // default
            if (this.config.variant === 'wood') {
                imgSrc = '/image/vaulti_2.png';
            } else {
                switch(this.config.color) {
                    case 'pink': imgSrc = '/image/vaulti_1.png'; break;
                    case 'lightblue': imgSrc = '/image/vaulti_3.png'; break;
                    case 'lightgreen': imgSrc = '/image/vaulti_4.png'; break;
                    case 'black': imgSrc = '/image/vaulti_0.png'; break;
                }
            }
            
            img.onload = () => {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
                ctx.drawImage(img, 0, 0, canvas.width, canvas.height);
                if (this.config.engrave) {
                    ctx.font = 'bold 24px Inter';
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.8)';
                    ctx.textAlign = 'right';
                    ctx.fillText(this.config.engrave, canvas.width - 25, canvas.height - 25);
                }
            };
            img.src = imgSrc;
            
            this.elements.colorSwatches.forEach(s => s.classList.remove('active'));
            if(this.config.variant === 'color') {
                const activeSwatch = document.querySelector(.color-swatches button[data-color="${this.config.color}"]);
                if(activeSwatch) activeSwatch.classList.add('active');
            }
        },
        saveConfig() {
            localStorage.setItem('vaultiConfig', JSON.stringify(this.config));
        },
        loadConfig() {
            const savedConfig = localStorage.getItem('vaultiConfig');
            if (savedConfig) {
                Object.assign(this.config, JSON.parse(savedConfig));
            }
            this.elements.variantSelect.value = this.config.variant;
            this.elements.engraveInput.value = this.config.engrave;
            this.updatePreview();
        },
        initCookieBanner() {
            if (!localStorage.getItem('cookieConsent')) {
                this.elements.cookieBanner.style.display = 'block';
            }
            this.elements.cookieAcceptBtn.addEventListener('click', () => {
                this.elements.cookieBanner.style.display = 'none';
                localStorage.setItem('cookieConsent', 'true');
            });
        }
      };

      app.init();
    });
  </script>
</body>
</html>

