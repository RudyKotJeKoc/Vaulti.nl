  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const variantSelect = document.getElementById('variant-select');
      const previewImage = document.getElementById('preview-image');
      const colorSwatches = document.querySelectorAll('.color-swatches button');

      function updateConfiguratorPreview() {
        const variant = variantSelect.value;
        const activeColor = document.querySelector('.color-swatches button.active').dataset.color;
        
        let imageName = variant === 'wood' ? 'Wood' : Color-${activeColor};
        previewImage.src = https://placehold.co/500x500/e2e8f0/0f172a?text=Vaulti+${imageName};
      }

      variantSelect.addEventListener('change', updateConfiguratorPreview);
      colorSwatches.forEach(swatch => {
        swatch.addEventListener('click', (e) => {
          e.preventDefault(); // To prevent any default button behavior
          colorSwatches.forEach(s => s.classList.remove('active'));
          swatch.classList.add('active');
          updateConfiguratorPreview();
        });
      });
    });
  </script>
